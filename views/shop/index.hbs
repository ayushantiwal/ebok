<div class="container">
	<header>
		<div class="container text-center">

			<div class="row">
				<div class="col-md-7 col-sm-8">
					<h1>I Do Believe Something Very Magical Happen When You Read a Good Book
					</h1>

				</div>
				<div class="col-md-4">
					<img class="main-img" src="/images/Standard-Ebooks-hed.jpg" alt="">
				</div>
			</div>


		</div>
	</header>

	<h2 style=" margin:20px;text-align: center;">ENTREPRENEURSHIP BOOKS</h2>

	{{#each products}}
	<div class="column row-cols-2 row-cols-md-5">
		{{#each this}}
		<div class="col mb-4">
			<div class="card" style="width: 185px;">
				<img class="card-img" src="{{ this.imagePath }}" class="card-img-top" alt="...">
				<div class="card-body">
					<h6 class="card-title">{{ this.title }}</h6>
					<p style="color: blue;" class="card-text">{{ this.description}}</p>
					<div class="price">
						Rs {{ this.price}}
					</div>
					<a onclick="greet()" style="margin: 5px;" href="/add-to-cart/{{this._id}}"
						class="btn btn-info btn-sm"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Add to
						cart</a>

				</div>
			</div>
		</div>

		<script>
			function greet() {
				alert("hello")
			}
		</script>

		{{/each}}
	</div>
	{{/each}}
</div>
{{> footer}}