<div class="container">
	{{#if products }}
	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sn-offset-3">
			<ul class="list-group">
				{{#each products }}
				<li class="list-group-item">
					<span class="badge badge-info">{{ this.qty}}</span>
					<strong>{{ this.item.title}}</strong>
					<span class="badge badge-light">{{ this.price }}</span>
					<div class="btn-group">
						<button class="btn btn-info btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action
							<span class="caret"></span></button>
						<ul class="dropdown-menu">
							<li> <a class="btn btn-info" href="/reduce/{{this.item._id}}">Reduce by 1</a></li>
							<li> <a class="btn btn-info" href="/remove/{{this.item._id}}">Remove All</a></li>
						</ul>
					</div>
				</li>
				{{/each }}

			</ul>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sn-offset-3">
			<strong>Total: {{ totalPrice }}</strong>
		</div>
	</div>
	<hr>
	<div class="row">
		<form action="/charge" method="post">
			<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
				data-image="https://stripe.com/img/documentation/checkout/marketplace.png" data-zip-code="false"
				data-key="{{stripePublishable}}" data-amount="{{totalPrice}}" data-name="Ebook Store"
				data-description="Widget" data-image="" data-locale="auto">

				</script>
			<script>
				document.getElementsByClassName('stripe-button-el')[0].style.display = 'none';
			</script>
			<button type="submit" class="btn btn-info btn-md">Buy
				Now</button>
		</form>
	</div>
	{{ else }}
	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sn-offset-3">
			<h2>No Items in Cart</h2>
		</div>
	</div>
	{{/if}}
</div>